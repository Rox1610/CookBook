<div class="recipes-container m-4">
  <h1>Recettes üçΩÔ∏è</h1>
  <div>
    <%= form_with url: recipes_path, method: :get, class: "d-flex my-3 w-50" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Trouve une recette" %>
      <%= button_tag type: 'submit', class: "button-search" do %>
        <i class="fa-solid fa-magnifying-glass"></i>
      <% end %>
    <% end %>
  </div>

  <div class="container-recipe row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @recipes.each do |recipe| %>
      <div class="card-index me-2">
        <%= cl_image_tag recipe.photo.key %>
        <div class="card-index-infos">
          <div>
            <%= link_to recipe_path(recipe), class:"text-decoration-none" do %>
              <h2><%= recipe.title %></h2>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
