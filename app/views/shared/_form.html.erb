<%= simple_form_for [@category, @recipe] do |f| %>

  <div class="form-inputs">
    <%= f.input :title, :label => 'Titre de la recette', required: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :ingredients, :label => 'Ingrédients', required: true %>
  </div>

  <div class="form-inputs">
    <%= f.rich_text_area :rich_body, placeholder: 'Explique comment préparer ton délicieux plat', required: true %>
  </div>

  <div class="form-inputs mt-2">
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Ajouter', class: 'btn btn-light' %>
  </div>
<% end %>
